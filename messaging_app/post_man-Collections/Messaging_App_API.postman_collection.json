					"script": {
						"exec": [
							"const json = pm.response.json();\r",
							"\r",
							"// Save access token\r",
							"if (json.access) {\r",
							"  pm.environment.set(\"accessToken\", json.access);\r",
							"}\r",
							"\r",
							"// Save refresh token (optional)\r",
							"if (json.refresh) {\r",
							"  pm.environment.set(\"refreshToken\", json.refresh);\r",
							"}\r",
							"\r",
							"// Test login success\r",
							"pm.test(\"Login successful\", () => pm.response.to.have.status(200));\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"auth": {
					"type": "bearer",
